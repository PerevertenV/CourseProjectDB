@model List<InfoAboutCurrency>
<partial name="_Notifications" />
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-black py-2">Список Валюти</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3 ">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-area="Admin" asp-controller="Currency" asp-action="Upsert" class="btn btn-primary">
					<i class="bi bi-file-earmark-plus"></i> Додати нову валюту
				</a>
			</div>
		</div>
		<table id="tblData" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th style="color: Black; text-align:center">Код валюти</th>
					<th style="color: Black; text-align:center">Ціна</th>
					<th style="color: Black; text-align:center">Доступна Сума</th>
					<th style="color: Black; text-align:center">Зміни</th>
				</tr>
			</thead>
			<tbody style="text-align:center">
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/InfoAboutCurrency.js"></script>
}
